{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome (Dev)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/angular/src",
      "sourceMaps": true,
      "preLaunchTask": "Start Angular (Dev)",
      "postDebugTask": null
    },
    {
      "name": "Launch Chrome (Prod)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/angular/src",
      "sourceMaps": true,
      "preLaunchTask": "Start Angular (Prod)"
    },
    {
      "name": "Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/angular/src"
    },
    {
      "name": ".NET Core Launch (API)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Backend",
      "program": "${workspaceFolder}/src/AnomalyDetection.HttpApi.Host/bin/Debug/net10.0/AnomalyDetection.HttpApi.Host.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/AnomalyDetection.HttpApi.Host",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Full Stack Debug",
      "type": "compound",
      "configurations": [
        ".NET Core Launch (API)",
        "Launch Chrome (Dev)"
      ],
      "preLaunchTask": "Build Backend",
      "stopAll": true
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": [
        ".NET Core Launch (API)",
        "Launch Chrome (Dev)"
      ],
      "stopAll": true
    }
  ]
}
