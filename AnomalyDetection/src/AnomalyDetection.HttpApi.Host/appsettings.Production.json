{
  "App": {
    "SelfUrl": "https://api.anomalydetection.example.com",
    "AngularUrl": "https://app.anomalydetection.example.com",
    "CorsOrigins": "https://app.anomalydetection.example.com,https://*.anomalydetection.example.com",
    "RedirectAllowedUrls": "https://app.anomalydetection.example.com",
    "DisablePII": true,
    "HealthCheckUrl": "/health-status"
  },
  "ConnectionStrings": {
    "Default": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=false;Encrypt=true;Connection Timeout=30;Max Pool Size=100;Min Pool Size=5;",
    "AbpTenantManagement": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};TrustServerCertificate=false;Encrypt=true;Connection Timeout=30;Max Pool Size=100;Min Pool Size=5;"
  },
  "AuthServer": {
    "Authority": "https://api.anomalydetection.example.com",
    "RequireHttpsMetadata": true,
    "SwaggerClientId": "AnomalyDetection_Swagger",
    "CertificatePassPhrase": "${CERT_PASSPHRASE}"
  },
  "StringEncryption": {
    "DefaultPassPhrase": "${ENCRYPTION_PASSPHRASE}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "Volo.Abp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Redis": {
    "Configuration": "${REDIS_CONNECTION_STRING}",
    "IsEnabled": true,
    "DatabaseId": 0,
    "KeyPrefix": "AnomalyDetection:"
  },
  "RabbitMQ": {
    "Connections": {
      "Default": {
        "HostName": "${RABBITMQ_HOST}",
        "Port": "${RABBITMQ_PORT}",
        "UserName": "${RABBITMQ_USER}",
        "Password": "${RABBITMQ_PASSWORD}",
        "VirtualHost": "/"
      }
    },
    "EventBus": {
      "ClientName": "AnomalyDetection_Production",
      "ExchangeName": "AnomalyDetection",
      "PrefetchCount": 10,
      "RetryCount": 3
    }
  },
  "ElasticSearch": {
    "Url": "${ELASTICSEARCH_URL}",
    "DefaultIndex": "anomalydetection-logs",
    "Username": "${ELASTICSEARCH_USER}",
    "Password": "${ELASTICSEARCH_PASSWORD}"
  },
  "HealthChecks": {
    "Enabled": true,
    "UI": {
      "Enabled": true,
      "Path": "/health-ui"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      },
      "Https": {
        "Url": "https://0.0.0.0:443",
        "Certificate": {
          "Path": "${SSL_CERT_PATH}",
          "Password": "${SSL_CERT_PASSWORD}"
        }
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 10485760,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "ApplicationInsights": {
    "InstrumentationKey": "${APPINSIGHTS_INSTRUMENTATIONKEY}",
    "EnableAdaptiveSampling": true,
    "EnablePerformanceCounterCollectionModule": true,
    "EnableDependencyTrackingTelemetryModule": true
  },
  "AllowedHosts": "*"
}
