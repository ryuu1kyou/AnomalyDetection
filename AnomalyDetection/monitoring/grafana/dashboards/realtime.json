{
  "title": "Realtime Detection Overview",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Realtime Notifications Rate",
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [ { "expr": "rate(realtime_notifications_total[5m])" } ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Broadcast Processing Latency (p95)",
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [ { "expr": "histogram_quantile(0.95, sum(rate(realtime_notification_processing_seconds_bucket[5m])) by (le))" } ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "SignalR Active Connections",
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [ { "expr": "signalr_active_connections" } ],
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Detection Results per Minute",
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [ { "expr": "rate(detection_results_total[1m]) * 60" } ],
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Broadcast Failures",
      "datasource": { "type": "prometheus", "uid": "PROM" },
      "targets": [ { "expr": "increase(broadcast_failures_total[15m])" } ],
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 8 }
    }
  ]
}
